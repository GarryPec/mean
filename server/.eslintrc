{
    "extends": "loopback",
    "rules": {
        "no-var": "error",
        "prefer-arrow-callback": "error",
        "space-before-function-paren": [
            2, {
                "anonymous": "always",
                "named": "never"
            }
        ],
        "indent": ["error", 4],
        "object-curly-spacing": ["error", "always"],
        "comma-dangle": ["error", "never"]
    },
    "env": {
        "es6": true,
        "node": true
    }
}
